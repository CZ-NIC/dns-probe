# DNS probe daemon
# Service argument is used as configuration file in /etc/dns-probe-@BACKEND@/<ARGUMENT>.conf
# to retreive probe's command line arguments
[Unit]
Description=Daemon for DNS probe
After=network.target

[Service]
Type=simple
Restart=always
EnvironmentFile=-/etc/dns-probe-@BACKEND@/%i.conf
ExecStart=@CMAKE_INSTALL_PREFIX@/@CMAKE_INSTALL_BINDIR@/dns-probe-@BACKEND@ $DAEMON_ARGS

[Install]
WantedBy=multi-user.target
